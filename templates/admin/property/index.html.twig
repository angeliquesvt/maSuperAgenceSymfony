{% extends 'base.html.twig' %}

{% block title %} Gérer les biens {% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les biens</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                {% for property in properties %}
                    <tr>
                        <td>{{ property.title }}</td>
                        <td>
                            <a href="{{ path('adminEdit', {id : property.id}) }}" class="btn btn-secondary">Editer</a>
                            <form action="{{ path('admin_delete', {id : property.id}) }}"></form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
          <a href="{{ path('admin_create') }}" class="btn btn-primary">Créer un nouveau bien</a>
        </div>
    </div>


{% endblock %}
